<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorBlueDark</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorBlue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="AppTheme.Button.UnelevatedButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/colorLightGray</item>
        <item name="android:drawableTint">@color/colorBlue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="AppTheme.HorizontalDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@color/colorLightGray</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

</resources>
